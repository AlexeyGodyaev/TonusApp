<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnActionsSortName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Сортировать (А-Я)"
            android:onClick="onClickActionsSortName"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сортировать (Ккал)"
            android:layout_weight="1"
            android:onClick="onClickActionsSortKcal"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@xml/border">

        <CheckBox
            android:id="@+id/activity_checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Калории"
           />



        <Spinner

            android:id="@+id/activity_spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp">

        </Spinner>
    </RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="5dp"
    android:text="Число ккал приведено за 1 час деятельности"
    android:textSize="8sp"/>
    <ProgressBar
        android:id="@+id/activity_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/action_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>