<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bJU"
        android:layout_alignStart="@+id/bJU"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/bJU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="12dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/productName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/productCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/bJU"
        android:layout_alignBottom="@+id/bJU"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <Button
        android:id="@+id/addProductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/productCalories"
        android:layout_alignEnd="@+id/productCalories"
        android:layout_alignLeft="@+id/productCalories"
        android:layout_alignRight="@+id/productCalories"
        android:layout_alignStart="@+id/productCalories"
        android:layout_alignTop="@+id/productName"
        android:text="+"
        android:textSize="5dp" />
</RelativeLayout>