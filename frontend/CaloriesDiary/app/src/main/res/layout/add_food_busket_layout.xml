<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_food_title"
        android:padding="10sp"
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/dialog_cal_per_gr"
        android:padding="10sp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/dialog_protein_text"
        android:layout_below="@+id/dialog_food_title"
        android:textColor="#000000"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:paddingLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Белки:" />

    <TextView
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_protein_text"
        android:text="Укажите порцию для рассчета количества потребленных калорий"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Порция:"
        android:layout_below="@+id/textView6"
        android:paddingBottom="6sp"
        android:paddingLeft="10sp"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/dialog_gr"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:gravity="left"
        android:textColor="@android:color/holo_blue_light"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:maxLength="4"
        android:inputType="number" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="г"
        android:paddingBottom="12dp"
        android:layout_marginRight="15dp"
        android:layout_alignBottom="@+id/dialog_gr"
        android:layout_alignParentRight="true"
        />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/textView13">
    <Button
        android:id="@+id/cancel_dialog_food"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:text="закрыть"
        android:textColor="@android:color/white"
        android:background="@drawable/food_button_border"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10sp"

        android:layout_weight="0.5"/>

    <Button
        android:id="@+id/add_food_to_busket"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:text="Принять"
        android:textColor="@android:color/white"
        android:background="@drawable/food_button_border"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"

        android:layout_weight="0.5"/>
</LinearLayout>


    <TextView
        android:textColor="#000000"
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Калорийность:"
        android:layout_below="@+id/dialog_gr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
         />

    <TextView
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/dialog_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignParentRight="true"
        android:paddingRight="10sp"/>

    <TextView
        android:id="@+id/dialog_protein_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:layout_above="@+id/textView6"
        android:layout_toRightOf="@+id/dialog_protein_text"
        android:layout_toEndOf="@+id/dialog_protein_text" />

    <TextView
        android:id="@+id/dialog_fats_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:textColor="#000000"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:text="Жиры:"
        android:layout_above="@+id/textView6"
        />

    <TextView
        android:id="@+id/dialog_fats_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/dialog_fats_text"
        android:layout_toRightOf="@+id/dialog_fats_text"
        />

    <TextView
        android:id="@+id/dialog_carbs_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dialog_fats_value"
         />

    <TextView
        android:id="@+id/dialog_carbs_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:layout_alignTop="@+id/dialog_carbs_value"
        android:layout_toLeftOf="@+id/dialog_carbs_value"
        android:layout_toStartOf="@+id/dialog_carbs_value"
        android:text="Углеводы:" />


</RelativeLayout>