<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/border"
    android:elevation="2dp"
    android:translationZ="2dp"
    android:translationY="1dp"

    android:layout_margin="10dp">

    <TextView
        android:id="@+id/recycler_food_item_name"
        android:text="name_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:textSize="18sp"
        android:textColor="#404040"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/recycler_food_item_bju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="b/j/u"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textColor="#aaaaaa"
            />
    <TextView
        android:id="@+id/recycler_food_item_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories_value2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        android:textColor="#aaaaaa"
        android:layout_toLeftOf="@+id/foodkcal"
        />
    <TextView
        android:id="@+id/foodkcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ккал"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        android:textColor="#aaaaaa"
        android:layout_alignParentRight="true"
        />

    </RelativeLayout>

</LinearLayout>