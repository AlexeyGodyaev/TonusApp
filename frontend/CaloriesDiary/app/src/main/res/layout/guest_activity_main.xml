<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
        android:id="@+id/guest_food_btn"
        android:onClick="onGuestFoodCatalogClc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:text="Справочник продуктов"
        android:layout_marginTop="60dp"/>
    <Button
        android:onClick="onGuestActionsCatalogClc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guest_food_btn"
        android:layout_centerHorizontal="true"
        android:text="Справочник активности"/>
</RelativeLayout>