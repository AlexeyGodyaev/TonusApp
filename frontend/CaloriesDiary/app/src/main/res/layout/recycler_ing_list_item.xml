<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/border"
    android:elevation="2dp"
    android:translationZ="2dp"
    android:translationY="1dp"

    android:layout_margin="10dp">

    <TextView
        android:id="@+id/recycler_food_item_name"
        android:text="name_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:textSize="18sp"
        android:textColor="#404040"/>

    <TextView
        android:id="@+id/recycler_food_item_bju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b/j/u"
        android:textSize="14sp"
        android:textColor="#aaaaaa"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recycler_food_item_calories"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:text="Белки/Жиры/Углеводы"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:textSize="14sp"
        android:layout_below="@+id/recycler_food_item_calories"
        android:textColor="#404040"/>

    <TextView
        android:id="@+id/recycler_food_item_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories_value2"
        android:textSize="18sp"
        android:textColor="#aaaaaa"
        android:layout_alignBaseline="@+id/foodkcal"
        android:layout_alignBottom="@+id/foodkcal"
        android:layout_toLeftOf="@+id/foodkcal"
        android:layout_toStartOf="@+id/foodkcal" />

    <TextView
        android:id="@+id/foodkcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:text="ккал"
        android:textColor="#aaaaaa"
        android:textSize="18sp" />


</RelativeLayout>