<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.caloriesdiary.caloriesdiary.MainActivity"
    tools:showIn="@layout/app_bar_main">

<TextView
    android:id="@+id/main_time_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="01 января 1900"
    android:layout_marginLeft="25dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="65dp"
    android:textSize="25sp"/>

    <LinearLayout
        android:id="@+id/main_todayCont"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/main_time_textview"
        android:layout_margin="25dp"
        android:background="@xml/border"
        android:onClick="onTodayClc"
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_diaryCont"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/main_todayCont"
        
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:background="@xml/border"
        android:onClick="onDiaryClick"
        >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_statCont"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/main_diaryCont"

        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:background="@xml/border"
        android:onClick="onStatClc"
        >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_foodCont"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/main_statCont"

        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:background="@xml/border"
        android:onClick="onFoodCatalogClc"
        >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_activityCont"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/main_foodCont"

        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:background="@xml/border"
        android:onClick="onActionsCatalogClc"
        >
    </LinearLayout>

</RelativeLayout>
</ScrollView>
