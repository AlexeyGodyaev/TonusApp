<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.caloriesdiary.caloriesdiary.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/today_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onTodayClc"
        android:text="Сегодня"
        android:layout_above="@+id/profile_btn"
        android:layout_alignLeft="@+id/profile_btn"
        android:layout_alignStart="@+id/profile_btn"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/profile_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Профиль"
        android:onClick="onProfileClick"
        android:layout_above="@+id/current_stat_btn"
        android:layout_alignLeft="@+id/current_stat_btn"
        android:layout_alignStart="@+id/current_stat_btn"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/current_stat_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Текущая статистика"
        android:onClick="onCurrentStatClick"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/diary_btn"
        android:layout_alignLeft="@+id/diary_btn"
        android:layout_alignStart="@+id/diary_btn" />
    <Button
        android:id="@+id/diary_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Дневник"
        android:onClick="onDiaryClick"
        android:layout_above="@+id/food_btn"
        android:layout_alignLeft="@+id/food_btn"
        android:layout_alignStart="@+id/food_btn"
        android:layout_marginBottom="10dp" />
    <Button
        android:id="@+id/food_btn"
        android:onClick="onFoodCatalogClc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Справочник продуктов"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/activity_btn"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/activity_btn"
        android:onClick="onActionsCatalogClc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Справочник активности"
        android:layout_marginBottom="106dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/food_btn"
        android:layout_alignStart="@+id/food_btn" />
   <!--
    <TextView
        android:id="@+id/id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID = "
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_btn" />
-->
</RelativeLayout>
