<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/todayDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/todayDayOfTheWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/dayNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="" />

            </LinearLayout>

            <TextView
                android:id="@+id/targetTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F2F2F2"
                android:id="@+id/recycle_relative_1">
                <TextView
                android:id="@+id/todayFoodBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="32dp"
                    android:textColor="#A5CDCD"
                    android:paddingLeft="35dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                android:elevation="20dp"

                android:onClick="onTodayFoodBtnClc"
                android:text="Питание" />

           <!--     <ListView
                android:id="@+id/my_food_basket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                  />  -->
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/food_busket_recycler_view"
                android:scrollbars="vertical"
                android:layout_below="@+id/todayFoodBtn">

            </android.support.v7.widget.RecyclerView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                android:id="@+id/todayActiveBtn"
                android:onClick="onTodayActivityBtnClc"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Активность"
                    android:textSize="32dp"
                    android:textColor="#A5CDCD"
                    android:paddingLeft="35dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:elevation="20dp"
                    />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/action_busket_recycler_view"
                android:scrollbars="vertical"
                android:layout_below="@+id/todayActiveBtn">

            </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
              <!--  <ListView
                android:id="@+id/my_active_basket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вес" />

            <EditText
                android:id="@+id/edit_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="кг" />

            <TextView
                android:id="@+id/today_antropometry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#A5CDCD"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:elevation="20dp"
                android:onClick="todayAntrClc"
                android:text="Антропометрия" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/antropometry_today"
        android:orientation="vertical">
    </LinearLayout>

            <Button
                android:id="@+id/save_today_params"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="onSaveTodayDataClc"
                android:text="Сохранить" />
        </LinearLayout>

</android.support.v4.widget.NestedScrollView>

