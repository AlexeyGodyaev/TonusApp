<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/border"
    android:elevation="2dp"
    android:translationZ="2dp"
    android:translationY="1dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/archive_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name_value1"
        android:textColor="#404040"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/archive_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="calories_value2"
            android:textColor="#aaaaaa"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/archive_item_name"
            android:layout_alignBottom="@+id/archive_item_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp" />
</RelativeLayout>