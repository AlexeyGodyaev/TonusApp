<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/loginform_blue_red">

    <TextView
        android:id="@+id/main_label"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="ДИЕТА"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="65sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textPersonName"
        android:text="noob"
        android:hint="Ваш логин \\ E-mail"
        android:maxLength="16"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_label"
        />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textPassword"
        android:maxLength="32"
        android:text="1234"
        android:hint="Ваш пароль"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editLogin"
        android:layout_marginTop="15dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/editPassword"
        android:layout_below="@id/editPassword"
        android:layout_marginTop="20dp"
        android:onClick="forgetpassClick"
        android:text="Забыли пароль?"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/googleAccountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/editPassword"
        android:layout_below="@id/editPassword"
        android:layout_marginTop="20dp"
        android:onClick="googleClc"
        android:text="Google+"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/editPassword"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/testRequestText"
        android:layout_toRightOf="@+id/testRequestText"
        android:onClick="loginClc"
        android:text="Вход" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="50dp"

        android:background="@android:color/transparent"
        android:onClick="registrationClc"
        android:text="Регистрация"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/guest_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:onClick="guestClc"
        android:text="Войти как Гость"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/testRequestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guest_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="TextView" />


</RelativeLayout>