<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_food_dialoglayout">
    <EditText
        android:id="@+id/custom_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Введите название"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/custom_food_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_food_name"
        android:layout_margin="10dp">

    </android.support.v7.widget.RecyclerView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_food_adding"
        android:text="Добавить"
        android:layout_margin="10dp"
        android:layout_below="@+id/custom_food_recycle"/>
</RelativeLayout>